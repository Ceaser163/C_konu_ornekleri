#include <stdio.h>
#include <stdlib.h>

int main()
{

   int tek_sayilar_toplam,cift_sayilar_toplam;
   int i,n;
   //klavyeden girilen sayiya kadar olan tek ve çift sayıları ekrana yazdırma
   
   printf("bir sayi giriniz: ");
   scanf("%d",&n);
   
   for(i=0;i<n;i++)
   {
   	if(i%2==0)
   	{
   		printf("Cift sayi: %d\n",i);
        tek_sayilar_toplam+=i;   
	}
   	else
   	{
   	    printf("Tek sayi: %d\n",i);	
        cift_sayilar_toplam+=i;
	}
   }
   printf("tek sayilar toplami: %d\n",tek_sayilar_toplam);
   printf("cift sayilar toplami: %d",cift_sayilar_toplam);
   
   
	
	return 0;
}
