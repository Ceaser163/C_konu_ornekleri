#include <stdio.h>
#include <stdlib.h>

int main()
{
    
    float ucret,dk;
    
    printf("Konusma surenizi girin\n");
    scanf("%f",&dk);
    
    if(dk<=3){
    	ucret=0.25;
	}
    else {
    	ucret=(dk-3)*0.08+0.25;
	}
    
    printf("Konusma sureniz:%.2f - Borcunuz:%.4f",dk,ucret);
    
	return 0;
}
